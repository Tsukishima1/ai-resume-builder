generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model UserResume {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  resumeId  String @unique
  title     String
  userEmail String
  userName  String

  firstName String?
  lastName  String?
  jobTitle  String?
  address   String?
  phone     String?
  email     String?

  themeColor String?
  summary    String?

  experience Experience[]
  education  Education[]
  skills     Skill[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  publishedAt DateTime?
}

model Experience {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  companyName  String
  location     String
  startDate    String
  endDate      String
  workSummary  String
  userResumeId String     @db.ObjectId
  userResume   UserResume @relation(fields: [userResumeId], references: [id])
}

model Education {
  id             String     @id @default(auto()) @map("_id") @db.ObjectId
  universityName String
  startDate      String
  endDate        String
  degree         String
  major          String
  description    String
  userResumeId   String     @db.ObjectId
  userResume     UserResume @relation(fields: [userResumeId], references: [id])
}

model Skill {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  rating       Int
  userResumeId String     @db.ObjectId
  userResume   UserResume @relation(fields: [userResumeId], references: [id])
}
